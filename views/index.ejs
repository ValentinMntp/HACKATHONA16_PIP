        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Configure ton emploi du temps Narvalo ! </h1><button ng-click="refresh()" class="pull-right">Appuie pour la magie :)</button>

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-th-list fa-fw" aria-hidden="true"></i> Emploi du temps juste en dessous (au cas où)!
                        </div>
                        <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources"  calendar="calendar"></div>
                          </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
